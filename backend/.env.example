# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# DynamoDB
DYNAMODB_TABLE_NAME=exambuddy-main
DYNAMODB_ENDPOINT=  # Leave empty for AWS, set to http://localhost:8001 for local

# S3 Buckets
S3_PDFS_BUCKET=exambuddy-pdfs
S3_EXPORTS_BUCKET=exambuddy-exports
S3_ENDPOINT=  # Leave empty for AWS, set to http://localhost:4566 for local

# Cognito
COGNITO_USER_POOL_ID=your-user-pool-id
COGNITO_CLIENT_ID=your-client-id
COGNITO_REGION=us-east-1

# JWT Secret (for local dev only - use Cognito in production)
JWT_SECRET=your-secret-key-min-32-characters-change-in-production

# API Configuration
API_CORS_ORIGINS=http://localhost:3000,http://localhost:5173
